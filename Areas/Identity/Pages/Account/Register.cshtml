@page
@model RegisterModel
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <link href="/css/Login.css" rel="stylesheet" />
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="~/jq/jquery-3.6.0.min.js"></script>

    <h1>@ViewData["Title"]</h1>


    <div class="wrapper fadeInDown">
        <div id="formContent" class="bg-secondary">
            <!-- Tabs Titles -->
            <!-- Icon -->
            <div class="fadeIn first">
                <b><h2 style="color:black">Register</h2></b>
            </div>

            <!-- Login Form -->
            <form asp-route-returnUrl="@Model.ReturnUrl" id="account" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <hr />
                <div class="form-group">
                    <input asp-for="Input.Email" type="text" id="register" class="fadeIn second" placeholder="Enter your e-mail" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Input.Password" type="password" id="register" class="fadeIn third" placeholder="Enter your password" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Input.ConfirmPassword" type="password" id="register" class="fadeIn third" placeholder="Confirm your password" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" class="fadeIn fourth bg-dark" value="Send">
                </div>
                
            </form>

        </div>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
