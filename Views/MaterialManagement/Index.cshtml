@model IEnumerable<StuffAndThings.Models.SkuStocksModel>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center text-monospace">Armazenamento</h1>

<div class="m-5 shadow p-3 mb-5">
    <p>
        <a asp-action="Create">
            <button class="btn btn-primary">
                Create New
            </button>
        </a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Seller
                </th>
                <th>
                    Name
                </th>
                <th>
                    Available Quantity
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Sku.Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Sku.Color)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Seller.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Sku.Name)
                    </td>
                    <td>
                        <p style="margin-left: 48px">@item.AvailableQuantity</p>
                    </td>
                    <td id="texto">
                        @Html.DisplayFor(modelItem => item.Sku.Price)
                    </td>
                    <td>
                        <div>
                        <p class="rounded-sm" style="background-color: @item.Sku.Color; width: 25px; height: 25px; margin-left: 9px">
                            </p>
                        </div>
                    </td>
                    <td class="d-flex justify-content-center">
                        <a asp-action="Edit" asp-route-id="@item.Id"><button class="btn btn-info mr-1">Edit</button></a>
                        <a asp-action="Delete" asp-route-id="@item.Id"><button class="btn btn-danger">Delete</button></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
