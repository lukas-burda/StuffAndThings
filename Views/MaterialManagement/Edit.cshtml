                        </div>
                        <div class="col-md-6">
                            <label asp-for="Seller.Id" class="control-label"></label>
                            <input asp-for="Seller.Id" class="form-control" />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <label asp-for="Seller.FullName" class="control-label"></label>
                            <input asp-for="Seller.FullName" class="form-control" />
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Seller.CPF" class="control-label"></label>
                            <input asp-for="Seller.CPF" class="form-control" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label asp-for="Seller.CNPJ" class="control-label"></label>
                            <input asp-for="Seller.CNPJ" class="form-control" />
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Seller.Discriminator" class="control-label"></label>
                            <input asp-for="Seller.Discriminator" class="form-control" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label asp-for="Seller.Gender" class="control-label"></label>
                            <input asp-for="Seller.Gender" class="form-control" />
                        </div>
                        <div class="col-md-6">
