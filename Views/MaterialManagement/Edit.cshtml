                            <input asp-for="Sku.Id" class="form-control" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label asp-for="Sku.Name" class="control-label"></label>
                            <input asp-for="Sku.Name" class="form-control" />
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Sku.Color" class="control-label"></label>
                            <input asp-for="Sku.Color" class="form-control" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label asp-for="Sku.Price" class="control-label"></label>
                            <input asp-for="Sku.Price" class="form-control" />
                        </div>
                    </div>
                </form>
                <div class="col-md-6 pt-4 mt-2">
                    <a asp-action="Index">
                        <button class="btn btn-outline-primary">Back to List</button>
                    </a>
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </div>
</div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
