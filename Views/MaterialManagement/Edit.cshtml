@model StuffAndThings.Models.SkuStocksModel

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center text-monospace">Edit</h1>
<div class="row d-flex justify-content-center">
    <div class="col-md-3 m-2 shadow mb-1">
        <form asp-action="Upsert">
            <div class="d-flex flex-wrap justify-content-center">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="w-75">
                    <label asp-for="AvailableQuantity" class="control-label"></label>
                    <input asp-for="AvailableQuantity" class="form-control" />
                    <span asp-validation-for="AvailableQuantity" class="text-danger"></span>
                </div>
                <div class="w-75">
                    <label asp-for="Sku.Price" class="control-label"></label>
                    <input asp-for="Sku.Price" class="form-control" />
                    <span asp-validation-for="Sku.Price" class="text-danger"></span>
                </div>
                <div class="w-75">
                    <label class="control-label">Seller</label>
                    <input asp-for="Seller.FullName" class="form-control" disabled />
                    <input asp-for="Seller.Id" hidden />
                </div>
                <div class="w-75">
                    <label class="control-label">Seller</label>
                    <input asp-for="Sku.Name" class="form-control" disabled />
                    <input asp-for="Sku.Id" hidden />
                </div>
                <div>
                    <input asp-for="Id" hidden />
                </div>
            </div>
            <div class="pt-2 mt-2 mb-2 text-center">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a class="btn btn-outline-primary " asp-action="Index">
                    Back to List
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
