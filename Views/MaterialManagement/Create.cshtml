@model StuffAndThings.Models.SkuStocksModel

@{
    ViewData["Title"] = "Create";
}
<style>
    input[type=number]::-webkit-inner-spin-button {
        -webkit-appearance: none;
    }

    input[type=number] {
        -moz-appearance: textfield;
        appearance: textfield;
    }
</style>

<h1 class="text-center text-monospace">Create</h1>
<h3 class="text-center text-monospace">SkuStocksModel</h3>
<div class="row d-flex justify-content-center">
    <div class="col-md-3 m-2 shadow mb-1">
        <form asp-action="Upsert">
            <div class="d-flex flex-wrap justify-content-center">
                <div class="w-75">
                    <label asp-for="AvailableQuantity" class="control-label"></label>
                    <input asp-for="AvailableQuantity" type="number" min="1" class="form-control" />
                    <span asp-validation-for="AvailableQuantity" class="text-danger"></span>
                </div>
                <div class="w-75">
                    <label class="control-label">Seller</label>
                    <select class="custom-select" asp-for="Seller.Id" asp-items="@(new SelectList(Model.Sellers, "Id", "FullName"))"></select>
                </div>
                <div class="w-75">
                    <label class="control-label">Sku</label>
                    <select class="custom-select" asp-for="Sku.Id" asp-items="@(new SelectList(Model.Skus, "Id", "Name"))"></select>
                </div>
            </div>
            <div class="pt-2 mt-2 mb-2">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a class="btn btn-outline-primary " asp-action="Index">
                    Back to List
                </a>
            </div>
        </form>
        
        


    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

