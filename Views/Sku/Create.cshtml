@model StuffAndThings.Models.SkuModel

@{
    ViewData["Title"] = "Create";
}

<style>
    input[type=number]::-webkit-inner-spin-button {
        -webkit-appearance: none;
    }

    input[type=number] {
        -moz-appearance: textfield;
        appearance: textfield;
    }
</style>

<h1 class="text-center text-monospace">Create</h1>
<h4 class="text-center text-monospace">Sku</h4>
<hr />
<div class="row d-flex justify-content-center">
    <div class="col-md-3 m-2 shadow mb-1">
        <form asp-action="Upsert">
            <div class="d-flex flex-wrap justify-content-center">
                <div class="w-75">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="w-75">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" type="number" min="1" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="w-75">
                    <label asp-for="Barcode" class="control-label"></label>
                    <input asp-for="Barcode" class="form-control" />
                </div>
                <div class="w-75">
                    <label asp-for="Color" class="control-label"></label>
                    <input asp-for="Color" class="form-control" placeholder="Hexadecimal"/>
                </div>
                <div class="w-75">
                    <label class="control-label">Product</label>
                    <select class="custom-select" asp-for="ProductId" asp-items="@(new SelectList(Model.Products, "Id", "Name"))"></select>
                </div>
            </div>
            <div class="pt-2 mt-2 mb-2 text-center">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a class="btn btn-outline-primary " asp-action="Index">
                    Back to List
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
