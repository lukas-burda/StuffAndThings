@model StuffAndThings.Models.UserModel
<script src="~/js/jquery-1.2.6.pack.js"></script>
<script src="~/js/jquery.maskedinput-1.1.4.pack.js"></script>

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center text-monospace">Create</h1>
<h4 class="text-center text-monospace">UserModel</h4>

<div class="row d-flex justify-content-center">
    <div class="col-md-6 m-5 shadow p-3 mb-5">
        <form asp-action="Upsert">
            <div class="">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="form-group col-md-12">
                        <label class="control-label">Full Name</label>
                        <input asp-for="FullName" class="form-control" placeholder="Write your name" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-6">
                        <label asp-for="CPF" class="control-label"></label>
                        <input asp-for="CPF" id="cpf" class="form-control" placeholder="Write CPF" />
                        <span asp-validation-for="CPF" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="CNPJ" class="control-label"></label>
                        <input asp-for="CNPJ" id="cnpj" class="form-control" placeholder="Write CNPJ"/>
                        <span asp-validation-for="CNPJ" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-6">
                        <label asp-for="Discriminator" class="control-label"></label>
                        <select class="form-control" asp-for="Discriminator" asp-items="Html.GetEnumSelectList<StuffAndThings.Models.Enums.Discriminator>()"></select>
                        <span asp-validation-for="Discriminator" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="Gender" class="control-label"></label>
                        <input asp-for="Gender" class="form-control" placeholder="Write gender"/>
                        <span asp-validation-for="Gender" class="text-danger"></span>
                    </div>
                </div>
                <div class="pt-2 mt-2 mb-2 text-center">
                    <input type="submit" value="Create" class="btn btn-primary" />
                    <a class="btn btn-outline-primary " asp-action="Index">
                        Back to List
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

<script>
    jQuery(function ($) {
        $("#cpf").mask("999.999.999/99");
        $("#cnpj").mask("99.999.999/9999-99");
    });
</script>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
